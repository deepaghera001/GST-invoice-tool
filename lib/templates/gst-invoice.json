{
  "id": "gst-invoice",
  "name": "GST Invoice",
  "description": "Professional GST-compliant invoice (standard domestic) for Indian businesses",
  "version": "1.0",
  "price": 99,
  "fields": {
    "seller": {
      "name": { "type": "text", "required": true, "label": "Business Name" },
      "address": { "type": "textarea", "required": false, "label": "Address" },
      "gstin": {
        "type": "text",
        "required": true,
        "label": "GSTIN",
        "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
      },
      "pan": { "type": "text", "required": false, "label": "PAN" }
    },
    "buyer": {
      "name": { "type": "text", "required": true, "label": "Customer Name" },
      "address": { "type": "textarea", "required": false, "label": "Address" },
      "gstin": { "type": "text", "required": false, "label": "GSTIN" }
    },
    "invoice": {
      "number": { "type": "text", "required": true, "label": "Invoice Number" },
      "date": { "type": "date", "required": true, "label": "Invoice Date", "default": "today" }
    },
    "items": {
      "description": { "type": "textarea", "required": true, "label": "Item Description" },
      "hsnCode": { "type": "text", "required": false, "label": "HSN/SAC Code" },
      "quantity": { "type": "number", "required": true, "label": "Quantity", "default": 1 },
      "rate": { "type": "number", "required": true, "label": "Rate (â‚¹)" }
    },
    "tax": {
      "cgst": { "type": "number", "required": false, "label": "CGST (%)", "default": 9 },
      "sgst": { "type": "number", "required": false, "label": "SGST (%)", "default": 9 }
    }
  },
  "calculations": {
    "subtotal": "items.quantity * items.rate",
    "cgstAmount": "subtotal * (tax.cgst / 100)",
    "sgstAmount": "subtotal * (tax.sgst / 100)",
    "total": "subtotal + cgstAmount + sgstAmount"
  },
  "layout": {
    "header": {
      "title": "TAX INVOICE",
      "alignment": "center"
    },
    "sections": [
      { "id": "seller", "title": "Seller Details", "position": "left" },
      { "id": "buyer", "title": "Buyer Details", "position": "right" },
      { "id": "items", "title": "Items", "type": "table" },
      { "id": "summary", "title": "Tax Summary", "position": "right" }
    ]
  }
}
